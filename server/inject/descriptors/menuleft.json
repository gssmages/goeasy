{
  "type": "object",
  "comment": "SlideOutMenu",
  "properties": {
    "sideMenuGroups": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "sideMenuItems": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "itemName": {
                  "type": "string",
                  "selector": ".usermenu li a",
                  "control": "property.innerText"
                },
                "action": {
                  "type": "action",
                  "selector": ".usermenu li a",
                  "control": "action.link"
                }
              }
            },
            "selectorAll": ".usermenu li"
          }
        }
      },
      "update": {
        "type": "none"
      },
      "selectorAll": ".menubar"
    },
    "logout": {
      "type": "action",
      "control": "action.button",
      "selector": ".userinfo"
    },
    "ismenuexists": {
      "type": "identifier",
      "selector": ".menubar",
      "control": "exists"
    }
  },
  "connect": [
    {
      "match": [
        "ismenuexists"
      ],
      "screens": [
        "menuleft"
      ]
    }
  ]
}
