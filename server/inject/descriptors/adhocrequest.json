{
  "type": "object",
  "comment": "",
  "properties": {
    "RequestType": {
      "type": "select",
      "selector": "#ddlReqType",
      "control": "select"
    },
    "Date": {
      "type": "date",
      "format": "DD/MM/YYYY",
      "selector": "#date",
      "control": "text"
    },
    "FromDate": {
      "type": "date",
      "format": "DD/MM/YYYY",
      "selector": "#fromdates",
      "control": "text"
    },
    "ToDate": {
      "type": "date",
      "format": "MM/DD/YYYY",
      "selector": "#todates",
      "control": "text"
    },
    "RequestFor": {
      "type": "select",
      "selector": "#ddlReqFor",
      "control": "select"
    },
    "Timing": {
      "type": "select",
      "selector": "#ddlShiftTime",
      "control": "select"
    },
    "Area": {
      "type": "select",
      "selector": "#ddlArea",
      "control": "select"
    },
    "BordingPoint": {
      "type": "select",
      "selector": "#ddlBoardingPoint",
      "control": "select"
    },
    "SpecialNeed": {
      "type": "select",
      "selectorAll": "[name=\"optradio\"]",
      "selectContains": "Special Need",
      "control": "radio"
    },
    "ReasonForAdhoc": {
      "type": "string",
      "selector": "#reason",
      "control": "text"
    },
    "PleaseSpecify": {
      "type": "select",
      "selector": "#splneedfor",
      "control": "select"
    },
    "isAdhocRequest": {
      "type": "identifier",
      "selector": ".headingtext.textcenter",
      "control": "exists",
      "selectContains": "Transport Details"
    },
    "sendRequest": {
      "type": "action",
      "selector": "#savebbt",
      "control": "action.button"
    },
    "Reset": {
      "type": "action",
      "selector": "input",
      "control": "action.button",
      "selectContains": "Reset"
    }
  },
  "connect": [
    {
      "match": [
        "isAdhocRequest"
      ],
      "screens": [
        "adhocrequest"
      ],
      "model": "adhocrequest"
    }
  ]
}
